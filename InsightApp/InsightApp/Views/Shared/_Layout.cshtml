<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InsightApp</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InsightApp.styles.css" asp-append-version="true" />

    <!-- Bootstrap Icons CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.9.1/font/bootstrap-icons.min.css" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between">
                <div class="d-inline-flex flex-row align-items-center">
                    <img src="~/Imgs/TeamLogo.png" alt="description of your image" class="header">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="FirstPage">InsightApp</a>
                </div>
                <div class ="d-inline-flex flex-row align-items-center">
                    <div class="navbar-collapse collapse d-sm-inline-flex ">
                        <!-- Right Icons and Links -->
                        @if (ViewBag.Page == "MemberPortal")
                        {
                            <div class="d-flex align-items-center">
                                <!-- Icons Group -->
                                <div class="icon-group d-flex align-items-center">
                                    <a class="navbar-brand" asp-area="" asp-controller="" asp-action=""><span class="icon" style="margin-right:30px;">❤️</span></a>  <!-- Favorite -->
                                    <a class="navbar-brand" asp-area="" asp-controller="" asp-action=""><span class="icon" style="margin-right:10px;">🛒</span></a>  <!-- Shopping Cart -->
                                    @if(ViewBag.Account == "Guest")
                                    {
                                        <a class="navbar-brand" asp-area="" asp-controller="Member" asp-action="MemberPortal"><span class="icon">👤 Log in | Register </span></a>  <!-- User Account -->
                                    }
                                    @if (ViewBag.Account == "Member")
                                    {
                                        @* <a class="navbar-brand" asp-area="" asp-controller="Member" asp-action="MemberPortal"><span class="icon">👤 My Account </span></a>  <!-- User Account --> *@
                                        <ul >
                                            <li>
                                                <a ><span class="icon">👤 My Account </span></a>
                                                <ul >
                                                    <li><a>My Profile</a></li>
                                                    <li ><a >Orders</a></li>
                                                </ul>
                                            </li>
                                        </ul>
                                    }
                                    
                                </div>
                            </div>
                        }

                        @* <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="FirstPage">Home</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        </ul> *@
                    </div>
                </div>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <last-action-message />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - InsightApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
 