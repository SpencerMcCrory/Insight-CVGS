<div class="breadcrumbsPortal">
    <!------Breadcrumb------>
    <nav style="--bs-breadcrumb-divider: '>'; margin-top:10px; font-size:18px; font-weight: bold;" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Member" asp-action="MemberPortal">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Member" asp-action="MemberPortal">Cart</a></li>
            <li class="breadcrumb-item active" aria-current="page">Check out</li>
        </ol>
    </nav>
</div>
<h1>Checkout</h1>
<div class="checkout-container">
    
    <div class="col-6 ">
        <!-- User Information -->
        <div class="side">
            <h6>Customer Information</h6>
            <div class="row">
                <div class="col-2"><label class="required-label" >Name:</label></div>
                <div class="col-10"><input type="text"  required></div>
            </div>
            <div class="row">
                <div class="col-2"><label class="required-label" >email:</label></div>
                <div class="col-10"><input type="text"  required></div>
            </div>
            <div class="row">
                <div class="col-2"><label class="required-label" >phone:</label></div>
                <div class="col-10"><input type="text"  required></div>
            </div>
            
        </div>

        <!-- Payment Information -->
        <div class=" side">
            <h6>Payment Information</h6>
            <form>
                <label for="card-number" class="required-label">Card Number:</label>
                <input type="text" id="card-number" required>

                <label for="expiry-date" class="required-label">Expiry Date:</label>
                <input type="text" id="expiry-date" placeholder="MM/YY" required>

                <label for="cvv" class="required-label">CVV:</label>
                <input type="text" id="cvv" required>
            </form>
        </div>

    </div>
    <!-- Shipping Address -->
    <div class="col-6 side">
        <h6>Address and shipping information</h6>
        <!-------Addresses view component---------->
        <vc:member-addresses member-id="6" />   @* Model.ActiveMember.MemberId *@

        @* <h6>Shipping Address</h6>
