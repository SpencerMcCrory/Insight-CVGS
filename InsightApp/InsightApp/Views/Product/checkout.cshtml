            <div class="col-9"><input type="text" id="stNum" required></div>
        </div>
        <div class="row">
            <div class="col-3"><label for="stName" class="required-label">street name:</label></div>
            <div class="col-9"><input type="text" id="stName" required></div>
        </div>
        <div class="row">
            <div class="col-3"><label for="city" class="required-label">city:</label></div>
            <div class="col-9"><input type="text" id="city" required></div>
        </div>
        <div class="row">
            <div class="col-3"><label for="postalCode" class="required-label">Postal Code:</label></div>
            <div class="col-9"><input type="text" id="postalCode" required></div>
        </div>
        <div class="row">
