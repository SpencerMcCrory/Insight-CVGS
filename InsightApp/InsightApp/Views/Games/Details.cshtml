@model InsightApp.Models.EditGameViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Game Detail Page">
    <title>@Model.Game.GameName - Game Detail Page</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .game-image {
            max-width: 100%;
            height: auto;
            box-shadow: rgba(0, 0, 0, 0.45) 0px 10px 50px 0px;
        }

        .detail-card {
            margin: 20px 0;
        }

        .box-shadow {
            box-shadow: rgba(0, 0, 0, 0.10) 0px 10px 50px 0px;
        }
    </style>
</head>
<body>
    <div class="d-inline-flex p-2 bd-highlight flex-column justify-content-start">

        <!------Breadcrumb------>
        <nav style="--bs-breadcrumb-divider: '>'; margin-top:10px; font-size:18px; font-weight: bold;" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Admin Panel</a></li>
                <li class="breadcrumb-item"><a asp-controller="Games" asp-action="List">Games</a></li>
                <li class="breadcrumb-item active" aria-current="page">Game Details</li>
            </ol>
        </nav>
    </div>
    <!-- Main Container -->
    <div class="container my-5">
        <!-- Game Info Row -->
        <div class="row">
            <!-- Game Image -->
            <div class="col-md-4">
                <img src="~/@ViewBag.ImgPath" alt="Game Image" class="game-image">
            </div>

            <!-- Game Details -->
            <div class="col-md-8 d-flex flex-column">
                <h2>@Model.Game.GameName</h2>
                <p>@Model.Game.Details</p>

                <h5>
                    Genre:
                    @foreach (var category in Model.Categories)
                    {
                        <span class="badge bg-primary-subtle text-primary">@category.CategoryName</span>
                    }
                </h5>
                <h5>Rating: <span class="badge bg-warning text-warning-subtle">Not enough ratings</span></h5>
                <h5>
                    Platform:
                    @foreach (var platform in Model.Platforms)
                    {
                        <span class="badge bg-info-subtle text-info">@platform.PlatformName</span>
                    }
                </h5>
                <h5>
                    Price:
                    @if (Model.Game.Price == 0)
                    {
                        <span class="badge bg-secondary">FREE</span>
                    }
                    else
                    {
                        <span class="badge bg-success text-success-subtle">@(Model.Game.Price.HasValue && Model.Game.Price.Value > 0 ? $"${Model.Game.Price.Value:F2}" : "FREE")</span>
                    }
                </h5>
            </div>
        </div>

        <!-- Additional Information -->
        <div class="row mt-4">
            <!-- Static User Reviews -->
            <div class="col-md-12 detail-card">
                <div class="card box-shadow">
                    <div class="card-header">
                        User Reviews
                    </div>
                    <div class="card-body">
                        <p><strong>Spencer McCrory:</strong> "Fantastic game! The graphics and storyline are top-notch."</p>
                        <p><strong>Casey Snoek:</strong> "Really enjoyed playing. Highly recommended for action lovers."</p>
                        <p><strong>Luiza Abdeen:</strong> "Great gameplay, but experienced some bugs. Overall, a solid experience."</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Empty Placeholder Images -->
        <div class="row mt-4">
            <div class="col-12">
                <h2>Coming soon: recommended games</h2>
            </div>
            <!-- Placeholder Image 1 -->
            <div class="col-md-4">
                <img src="https://via.placeholder.com/300x200" alt="Screenshot 1" class="img-fluid">
            </div>
            <!-- Placeholder Image 2 -->
            <div class="col-md-4">
                <img src="https://via.placeholder.com/300x200" alt="Screenshot 2" class="img-fluid">
            </div>
            <!-- Placeholder Image 3 -->
            <div class="col-md-4">
                <img src="https://via.placeholder.com/300x200" alt="Screenshot 3" class="img-fluid">
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>