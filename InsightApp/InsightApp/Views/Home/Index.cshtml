@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4" style="text-shadow: 6px 2px 10px rgba(0,0,0,0.3);">Conestoga Virtual Game Store</h1>
    <div style="margin-top:30px">
        <h2 class="myHeader">Admin Panel</h2>
    </div>
    <div class="d-flex flex-column  mb-3" style="margin-top:80px;">
        <div class="d-flex justify-content-center">
            <a asp-controller="" asp-action="" role="button" class="homePage btn btn-lg" style="background-color:rgb(170, 200, 25);">Games</a>
        </div>
        <div class="d-flex justify-content-center">
            <a asp-controller="Event" asp-action="GetAllEvents" role="button" class="homePage btn btn-lg" style="background-color:rgb(80, 140, 155);">Events</a>
        </div>
        <div class="d-flex justify-content-center">
            <a asp-controller="" asp-action="" role="button" class="homePage btn btn-lg" style="background-color:rgb(160, 50, 85);">Reviews</a>
        </div>
       
    </div>
    
</div>

