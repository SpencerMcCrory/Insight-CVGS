@using Microsoft.AspNetCore.Identity
@inject UserManager<Account> userManager
@inject SignInManager<Account> SignInManager

<div class="text-center">
    <h1 class="display-4" style="text-shadow: 6px 2px 10px rgba(0,0,0,0.3);">Conestoga Virtual Game Store</h1>
    
    <div class="d-flex flex-column  mb-3" style="margin-top:80px;">
        <div class="d-flex justify-content-center">
            @if (SignInManager.IsSignedIn(User) == false)
            {
                <a asp-area="Identity" asp-page="/Account/Login" role="button" class="homePage btn btn-lg" style="background-color:rgb(80, 140, 155);">Member Portal</a>
            }
            else
            {
                <a asp-controller="Member" asp-action="MemberPortal" role="button" class="homePage btn btn-lg" style="background-color:rgb(80, 140, 155);">Member Portal</a>
            }
        </div>
        <div class="d-flex justify-content-center">
            @if (SignInManager.IsSignedIn(User) == false)
            {
                <a asp-area="Identity" asp-page="/Account/Login" role="button" class="homePage btn btn-lg" style="background-color:rgb(160, 50, 85);">Admin Panel</a>
            }
            else
            {
                <a asp-controller="Home" asp-action="Index" role="button" class="homePage btn btn-lg" style="background-color:rgb(160, 50, 85);">Admin Panel</a>
            }
        </div>

    </div>

</div>

